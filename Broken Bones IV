-- Booting Library

local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

-- Functions

function DestroyGui()

    OrionLib:Destroy()

end

-- Creating Window

local Window = OrionLib:MakeWindow({Name = "0n1 Hub V2 â€¢ Broken Bones IV", HidePremium = false, IntroEnabled = false})

-- Creating Tabs

local tab1 = Window:MakeTab({

	Name = "Main",	Icon = "",

	PremiumOnly = false

})

local tab2 = Window:MakeTab({

	Name = "Player",

	Icon = "",

	PremiumOnly = false

})

local tab3 = Window:MakeTab({

	Name = "More",

	Icon = "",

	PremiumOnly = false

})

-- Config Tab1

local Section1 = tab1:AddSection({

	Name = "Auto Farm"

})

tab1:AddButton({

	Name = "Farm Bones",

	Callback = function()

        wait(1)

    local player = game:GetService("Players").LocalPlayer

local Respawn

pcall(function() Respawn = getsenv(game:GetService("ReplicatedFirst"):FindFirstChildOfClass("LocalScript")).Respawn end)

_G.farm=true

while wait(0.5) do

if _G.farm then

local char = player.Character

local root = char.HumanoidRootPart

for j=1,3 do

char:SetPrimaryPartCFrame(CFrame.new(-400,700,-250))

wait(0.5)

for k=1,19 do

if root:FindFirstChild("BodyForce") then root.BodyForce:Destroy() end

root.Velocity = Vector3.new(0,-500,0)

wait(0.1)

end

end

for j=1,30 do

char:SetPrimaryPartCFrame(CFrame.new(0,26,-172))

root.Velocity = Vector3.new()

wait()

end

wait(4)

if Respawn then

player.PlayerGui.Gui.Summary:TweenPosition(UDim2.new(0.5, 0, 1.5, 0), "In", "Back", 0.75, true)

Respawn(workspace.CurrentCamera.CFrame, workspace.CurrentCamera.Focus)

player.PlayerGui.Gui.Summary.Visible=false

else

repeat wait(0.1) until not player.PlayerGui.Gui.Summary.Visible

end

end

end

	end    

})

-- Config Tab2

local section1 = tab2:AddSection({

	Name = "Settings"

})

tab2:AddTextbox({

	Name = "Walk Speed",

	Default = "",

	TextDisappear = false,

	Callback = function(pws)

		game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = pws

	end	  

})

tab2:AddTextbox({

	Name = "Jump Power",

	Default = "",

	TextDisappear = false,

	Callback = function(pjp)

		game.Players.LocalPlayer.Character.Humanoid.JumpPower = pjp

	end	  

})

tab2:AddTextbox({

	Name = "Hip Height",

	Default = "",

	TextDisappear = false,

	Callback = function(phh)

		game.Players.LocalPlayer.Character.Humanoid.HipHeight = phh

	end	  

})

tab2:AddButton({

	Name = "Low Graphics",

	Callback = function()

         _G.Settings = {

            Players = {

                ["Ignore Me"] = true, -- Ignore your Character

                ["Ignore Others"] = true -- Ignore other Characters

            },

            Meshes = {

            Destroy = false,

            LowDetail = true

        },

        Images = {

            Invisible = true,

            LowDetail = false,

            Destroy = false,

        },

        ["No Particles"] = true, -- Disables all ParticleEmitter, Trail, Smoke, Fire and Sparkles

        ["No Camera Effects"] = true, -- Disables all PostEffect's (Camera/Lighting Effects)

        ["No Explosions"] = true, -- Makes Explosion's invisible

        ["No Clothes"] = true, -- Removes Clothing from the game

        ["Low Water Graphics"] = true, -- Removes Water Quality

        ["No Shadows"] = true, -- Remove Shadows

        ["Low Rendering"] = true, -- Lower Rendering

        ["Low Quality Parts"] = true -- Lower quality parts

    }

        loadstring(game:HttpGet("https://raw.githubusercontent.com/CasperFlyModz/discord.gg-rips/main/FPSBooster.lua"))()	

	end    

})

tab2:AddButton({

	Name = "Anti Kick",

	Callback = function()

         local vu = game:GetService("VirtualUser")

            game:GetService("Players").LocalPlayer.Idled:connect(function()

                    vu:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)

                    wait(1)

                vu:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)

            end)	

	end    

})

-- Config Tab3

local Section1 = tab3:AddSection({

	Name = "Discord"

})

tab3:AddButton({

	Name = "Copy Discord Invite",

	Callback = function()

	    setclipboard("discord.gg/UnjnNVx6Tp")

        OrionLib:MakeNotification({

        Name = "Copied Invite!",

        Content = "Join the Discord by using this invite!!",

        Image = "",

        Time = 1.5

        })

	end    

})

local Section1 = tab3:AddSection({

	Name = "Credits"

})

tab3:AddLabel("0n1kidd#0676")

tab3:AddLabel("MainChat#5720")

tab3:AddLabel("TestAccount#1287")

local Section1 = tab3:AddSection({

	Name = "GUI"

})

tab3:AddButton({

	Name = "Destroy GUI",

	Callback = function()

	    wait(0.5)

	    DestroyGui()

	end    

})

-- Script End

OrionLib:Init()
